{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist/public" }
    },
    {
      "src": "server/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/admin(?:/.*)?", "dest": "server/index.ts" },
    { "src": "/api(?:/.*)?",   "dest": "server/index.ts" },
    { "src": "/(.*)",          "dest": "dist/public/$1" }
  ]
}
